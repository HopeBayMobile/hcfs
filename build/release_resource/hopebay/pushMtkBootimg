#!/bin/bash

adb remount

echo -e "make boot.img"
mk-bootimg ./bootimg/

if [ ! -e ./boot.img ];then
    echo -e "\nNo ./boot.img found!"
	exit
fi

echo -e "\npush ./boot.img to the device"
adb push ./boot.img /cache/boot.img

echo -e "\ndb shell dd if=/cache/boot.img of=/dev/block/platform/mtk-msdc.0/by-name/boot"
adb shell dd if=/cache/boot.img of=/dev/block/platform/mtk-msdc.0/by-name/boot 
adb shell rm /cache/boot.img
