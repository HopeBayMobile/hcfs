# A sample Makefile for building Google Test and using it in user
# tests.  Please tweak it to suit your environment and project.  You
# may want to move it to your project's root directory.
#
# SYNOPSIS:
#
#   make [all]  - makes everything.
#   make TARGET - makes the given target.
#   make clean  - removes all files generated by make.

# Please tweak the following variable definitions as needed by your
# project, except GTEST_HEADERS, which you can use in your own targets
# but shouldn't modify.

# Points to the root of Google Test, relative to where this file is.
# Remember to tweak this if you move this file.
GTEST_DIR = ../../gtest-1.7.0

# Where to find user code.
USER_DIR = $(realpath ../../../../../src/HCFS)

# Location for unittest code
UNITTEST_DIR = $(realpath ./unittests)

# Flags passed to the preprocessor.
# Set Google Test's header directory as a system directory, such that
# the compiler doesn't generate warnings in Google Test headers.
CPPFLAGS += -isystem $(GTEST_DIR)/include -iquote$(USER_DIR) $(EXTRACPPFLAGS)

# Flags passed to the C++ compiler.
CXXFLAGS += -g -Wall -Wextra -pthread -fprofile-arcs -D_FILE_OFFSET_BITS=64

CXX = gcc

CFLAGS += -g -Wall -Wextra -pthread -fprofile-arcs -ftest-coverage -D_FILE_OFFSET_BITS=64

CFAKEFLAGS += -g -Wall -Wextra -pthread -fprofile-arcs -D_FILE_OFFSET_BITS=64

# All tests produced by this Makefile.  Remember to add new tests you
# created to the list.
TESTS = metaops_unittest file_present_unittest super_block_unittest lookup_count_unittest xattr_ops_unittest

# All Google Test headers.  Usually you shouldn't change this
# definition.
GTEST_HEADERS = $(GTEST_DIR)/include/gtest/*.h \
                $(GTEST_DIR)/include/gtest/internal/*.h

# House-keeping build targets.

all : setup $(TESTS)

clean :
	rm -rf $(TESTS) gtest.a gtest_main.a *.o *.gcda *.gcov *.gcno

test : setup $(TESTS)
	./metaops_unittest
	./file_present_unittest
	./super_block_unittest
	./lookup_count_unittest
	./xattr_ops_unittest
	gcovr -r $(USER_DIR) .

.PHONY : setup
setup :
	$(USER_DIR)/../../utils/setup_dev_env.sh -m unit_test

export PATH := /usr/lib/ccache:$(PATH)
export USE_CCACHE := 1

# Builds gtest.a and gtest_main.a.

# Usually you shouldn't tweak such internal variables, indicated by a
# trailing _.
GTEST_SRCS_ = $(GTEST_DIR)/src/*.cc $(GTEST_DIR)/src/*.h $(GTEST_HEADERS)

# For simplicity and to avoid depending on Google Test's
# implementation details, the dependencies specified below are
# conservative and not optimized.  This is fine as Google Test
# compiles fast and for ordinary users its source rarely changes.
gtest-all.o : $(GTEST_SRCS_)
	$(CXX) $(CPPFLAGS) -I$(GTEST_DIR) $(CXXFLAGS) -c \
            $(GTEST_DIR)/src/gtest-all.cc -lstdc++

gtest_main.o : $(GTEST_SRCS_)
	$(CXX) $(CPPFLAGS) -I$(GTEST_DIR) $(CXXFLAGS) -c \
            $(GTEST_DIR)/src/gtest_main.cc -lstdc++

gtest.a : gtest-all.o
	$(AR) $(ARFLAGS) $@ $^

gtest_main.a : gtest-all.o gtest_main.o
	$(AR) $(ARFLAGS) $@ $^

# Builds a sample test.  A test should link with either gtest.a or
# gtest_main.a, depending on whether it defines its own main()
# function.


# metaops.c
metaops.o : $(USER_DIR)/metaops.c $(USER_DIR)/hfuse_system.h $(USER_DIR)/params.h $(GTEST_HEADERS)
	$(CXX) $(CPPFLAGS) $(CFLAGS) -c $(USER_DIR)/metaops.c

metaops_mock_function.o : $(UNITTEST_DIR)/metaops_mock_function.c $(UNITTEST_DIR)/mock_param.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(UNITTEST_DIR)/metaops_mock_function.c

metaops_unittest.o : $(UNITTEST_DIR)/metaops_unittest.cc $(GTEST_HEADERS)
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(UNITTEST_DIR)/metaops_unittest.cc

metaops_unittest : metaops_mock_function.o metaops.o metaops_unittest.o gtest_main.a
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -lpthread $^ -o $@ -lstdc++


# file_present.c
file_present.o : $(USER_DIR)/file_present.c $(USER_DIR)/hfuse_system.h $(USER_DIR)/params.h $(GTEST_HEADERS)
	$(CXX) $(CPPFLAGS) $(CFLAGS) -c $(USER_DIR)/file_present.c

file_present_mock_function.o : $(UNITTEST_DIR)/file_present_mock_function.c $(UNITTEST_DIR)/mock_param.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(UNITTEST_DIR)/file_present_mock_function.c

file_present_unittest.o : $(UNITTEST_DIR)/file_present_unittest.cc $(GTEST_HEADERS)
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(UNITTEST_DIR)/file_present_unittest.cc

file_present_unittest : file_present_mock_function.o file_present.o file_present_unittest.o gtest_main.a
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -lpthread $^ -o $@ -lstdc++


# super_block.c
super_block.o : $(USER_DIR)/super_block.c $(USER_DIR)/hfuse_system.h $(USER_DIR)/params.h $(GTEST_HEADERS)
	$(CXX) $(CPPFLAGS) $(CFLAGS) -c $(USER_DIR)/super_block.c

super_block_mock_function.o : $(UNITTEST_DIR)/super_block_mock_function.c $(UNITTEST_DIR)/mock_param.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(UNITTEST_DIR)/super_block_mock_function.c

super_block_unittest.o : $(UNITTEST_DIR)/super_block_unittest.cc $(GTEST_HEADERS)
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(UNITTEST_DIR)/super_block_unittest.cc

super_block_unittest : super_block_mock_function.o super_block.o super_block_unittest.o gtest_main.a
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -lpthread $^ -o $@ -lstdc++


# lookup_count.c
lookup_count.o : $(USER_DIR)/lookup_count.c $(USER_DIR)/hfuse_system.h $(USER_DIR)/params.h $(GTEST_HEADERS)
	$(CXX) $(CPPFLAGS) $(CFLAGS) -c $(USER_DIR)/lookup_count.c

lookup_count_mock_function.o : $(UNITTEST_DIR)/lookup_count_mock_function.c $(UNITTEST_DIR)/mock_param.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(UNITTEST_DIR)/lookup_count_mock_function.c

lookup_count_unittest.o : $(UNITTEST_DIR)/lookup_count_unittest.cc $(GTEST_HEADERS)
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(UNITTEST_DIR)/lookup_count_unittest.cc

lookup_count_unittest : lookup_count_mock_function.o lookup_count.o lookup_count_unittest.o gtest_main.a
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -lpthread $^ -o $@ -lstdc++


# xattr_ops.c
xattr_ops.o : $(USER_DIR)/xattr_ops.c $(USER_DIR)/logger.h $(USER_DIR)/meta_mem_cache.h $(GTEST_HEADERS)
	$(CXX) $(CPPFLAGS) $(CFLAGS) -c $(USER_DIR)/xattr_ops.c

xattr_ops_mock_function.o : $(UNITTEST_DIR)/xattr_ops_mock_function.c $(UNITTEST_DIR)/mock_param.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(UNITTEST_DIR)/xattr_ops_mock_function.c

xattr_ops_unittest.o : $(UNITTEST_DIR)/xattr_ops_unittest.cc $(GTEST_HEADERS)
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(UNITTEST_DIR)/xattr_ops_unittest.cc

xattr_ops_unittest : xattr_ops_mock_function.o xattr_ops.o xattr_ops_unittest.o gtest_main.a
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -lpthread $^ -o $@ -lstdc++

