# A sample Makefile for building Google Test and using it in user
# tests.  Please tweak it to suit your environment and project.  You
# may want to move it to your project's root directory.
#
# SYNOPSIS:
#
#   make [all]  - makes everything.
#   make TARGET - makes the given target.
#   make clean  - removes all files generated by make.

# Please tweak the following variable definitions as needed by your
# project, except GTEST_HEADERS, which you can use in your own targets
# but shouldn't modify.

# Points to the root of Google Test, relative to where this file is.
# Remember to tweak this if you move this file.
GTEST_DIR = ../../gtest-1.7.0

# Where to find user code.
USER_DIR = $(realpath ../../../../../src/HCFS)

# Location for unittest code
UNITTEST_DIR = $(realpath ./unittests)

# Flags passed to the preprocessor.
# Set Google Test's header directory as a system directory, such that
# the compiler doesn't generate warnings in Google Test headers.
CPPFLAGS += -isystem $(GTEST_DIR)/include -iquote$(USER_DIR) $(EXTRACPPFLAGS)

# Flags passed to C and C++ compilers
CPPFLAGS += -g -Wall -Wextra -pthread -fprofile-arcs -fpermissive \
	    -D_FILE_OFFSET_BITS=64 \
	    -DDEDUP_ENABLE=0 \
	    -DENCRYPT_ENABLE=1 \
	    -DCOMPRESS_ENABLE=0 \
	    -DARM_32bit_ \
	    -D_ANDROID_ENV_
# Flags passed to the C compiler. (We trace coverage of hcfs source only)
CFLAGS += -ftest-coverage
CFAKEFLAGS +=
# Flags passed to the C++ compiler.
CXXFLAGS +=
# gcc will compile: *.c/*.cpp files as C and C++ respectively.
CXX = gcc
GCC_VERSION_GE_49 := $(shell expr `gcc -dumpversion | cut -f1-2 -d.` \>= 4.9)
ifeq "$(GCC_VERSION_GE_49)" "1"
	CPPFLAGS += -fdiagnostics-color
endif

# All tests produced by this Makefile.  Remember to add new tests you
# created to the list.
TESTS = hcfs_tocloud_unittest hcfs_fromcloud_unittest hcfs_clouddelete_unittest \
	atomic_tocloud_unittest tocloud_tools_unittest

.PHONY: $(DO_TESTS)
DO_TESTS = $(TESTS:%=test-%)

# All Google Test headers.  Usually you shouldn't change this
# definition.
GTEST_HEADERS = $(GTEST_DIR)/include/gtest/*.h \
                $(GTEST_DIR)/include/gtest/internal/*.h

# House-keeping build targets.

all : setup $(TESTS)

clean :
	rm -rf $(TESTS) gtest.a gtest_main.a *.o *.gcda *.gcov *.gcno tmpdir

test : setup $(DO_TESTS)
ifndef NOGCOVR
	gcovr -r $(USER_DIR) .
endif

$(DO_TESTS): $(TESTS)
	./$(@:test-%=%) --gtest_output=xml:test_detail_$(@:test-%=%).xml

.PHONY : setup
setup :
	@$(USER_DIR)/../../utils/setup_dev_env.sh -m unit_test

export PATH := /usr/lib/ccache:$(PATH)
export USE_CCACHE := 1

# Builds gtest.a and gtest_main.a.

# Usually you shouldn't tweak such internal variables, indicated by a
# trailing _.
GTEST_SRCS_ = $(GTEST_DIR)/src/*.cc $(GTEST_DIR)/src/*.h $(GTEST_HEADERS)

# For simplicity and to avoid depending on Google Test's
# implementation details, the dependencies specified below are
# conservative and not optimized.  This is fine as Google Test
# compiles fast and for ordinary users its source rarely changes.
gtest-all.o : $(GTEST_SRCS_)
	$(CXX) $(CPPFLAGS) -I$(GTEST_DIR) $(CXXFLAGS) -c \
            $(GTEST_DIR)/src/gtest-all.cc -lstdc++

gtest_main.o : $(GTEST_SRCS_)
	$(CXX) $(CPPFLAGS) -I$(GTEST_DIR) $(CXXFLAGS) -c \
            $(GTEST_DIR)/src/gtest_main.cc -lstdc++

gtest.a : gtest-all.o
	$(AR) $(ARFLAGS) $@ $^

gtest_main.a : gtest-all.o gtest_main.o
	$(AR) $(ARFLAGS) $@ $^

# Builds a sample test.  A test should link with either gtest.a or
# gtest_main.a, depending on whether it defines its own main()
# function.


# mock functions for dedup_table.c
dedup_mock_function.o : $(UNITTEST_DIR)/dedup_mock_function.c
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(UNITTEST_DIR)/dedup_mock_function.c

b64encode.o : $(USER_DIR)/b64encode.c $(USER_DIR)/global.h $(USER_DIR)/params.h \
                     $(USER_DIR)/fuseop.h $(USER_DIR)/b64encode.h $(GTEST_HEADERS)
	$(CXX) $(CPPFLAGS) $(CFLAGS) -c $(USER_DIR)/b64encode.c

enc.o : $(USER_DIR)/enc.c $(USER_DIR)/global.h $(USER_DIR)/params.h \
        $(USER_DIR)/fuseop.h $(USER_DIR)/enc.h $(GTEST_HEADERS)
	$(CXX) $(CPPFLAGS) $(CFLAGS) -c $(USER_DIR)/enc.c

compress.o : $(USER_DIR)/compress.c $(USER_DIR)/global.h $(USER_DIR)/params.h \
        $(USER_DIR)/fuseop.h $(USER_DIR)/compress.h $(GTEST_HEADERS)
	$(CXX) $(CPPFLAGS) $(CFLAGS) -c $(USER_DIR)/compress.c

objmeta.o : $(USER_DIR)/objmeta.c $(USER_DIR)/global.h $(USER_DIR)/params.h \
        $(USER_DIR)/fuseop.h $(USER_DIR)/objmeta.h $(GTEST_HEADERS)
	$(CXX) $(CPPFLAGS) $(CFLAGS) -c $(USER_DIR)/objmeta.c

# hcfs_fromcloud testing
hcfs_fromcloud.o : $(USER_DIR)/hcfs_fromcloud.c $(USER_DIR)/global.h $(USER_DIR)/params.h \
                     $(USER_DIR)/fuseop.h $(USER_DIR)/enc.h $(USER_DIR)/hcfs_fromcloud.h $(GTEST_HEADERS)
	$(CXX) $(CPPFLAGS) $(CFLAGS) -c $(USER_DIR)/hcfs_fromcloud.c

hcfs_fromcloud_unittest.o : $(UNITTEST_DIR)/hcfs_fromcloud_unittest.cc \
                      $(USER_DIR)/hcfs_fromcloud.h $(USER_DIR)/hcfs_fromcloud.c \
		      $(GTEST_HEADERS)
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(UNITTEST_DIR)/hcfs_fromcloud_unittest.cc

fromcloud_mock_function.o : $(UNITTEST_DIR)/fromcloud_mock_function.c
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(UNITTEST_DIR)/fromcloud_mock_function.c

hcfs_fromcloud_unittest : fromcloud_mock_function.o hcfs_fromcloud.o hcfs_fromcloud_unittest.o gtest_main.a
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -lpthread $^ -o $@ -lstdc++ -lcrypto -llz4

# hcfs_tocloud testing
hcfs_tocloud.o : $(USER_DIR)/hcfs_tocloud.c $(USER_DIR)/global.h $(USER_DIR)/params.h \
                     $(USER_DIR)/fuseop.h $(USER_DIR)/hcfs_tocloud.h $(GTEST_HEADERS)
	$(CXX) $(CPPFLAGS) $(CFLAGS) -c $(USER_DIR)/hcfs_tocloud.c

hcfs_tocloud_unittest.o : $(UNITTEST_DIR)/hcfs_tocloud_unittest.cc \
                      $(USER_DIR)/hcfs_tocloud.h $(USER_DIR)/hcfs_tocloud.c \
		      $(GTEST_HEADERS)
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(UNITTEST_DIR)/hcfs_tocloud_unittest.cc

tocloud_mock_function.o : $(UNITTEST_DIR)/tocloud_mock_function.c
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(UNITTEST_DIR)/tocloud_mock_function.c

hcfs_tocloud_unittest : b64encode.o enc.o compress.o objmeta.o dedup_mock_function.o tocloud_mock_function.o hcfs_tocloud.o hcfs_tocloud_unittest.o gtest_main.a
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -lpthread $^ -o $@ -lstdc++ -lcrypto -llz4

# hcfs_clouddelete testing
hcfs_clouddelete.o : $(USER_DIR)/hcfs_clouddelete.c $(USER_DIR)/global.h $(USER_DIR)/params.h \
                     $(USER_DIR)/fuseop.h $(USER_DIR)/hcfs_clouddelete.h $(GTEST_HEADERS)
	$(CXX) $(CPPFLAGS) $(CFLAGS) -c $(USER_DIR)/hcfs_clouddelete.c

hcfs_clouddelete_unittest.o : $(UNITTEST_DIR)/hcfs_clouddelete_unittest.cc \
                      $(USER_DIR)/hcfs_clouddelete.h $(USER_DIR)/hcfs_clouddelete.c \
		      $(GTEST_HEADERS)
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(UNITTEST_DIR)/hcfs_clouddelete_unittest.cc

clouddelete_mock_function.o : $(UNITTEST_DIR)/clouddelete_mock_function.c
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(UNITTEST_DIR)/clouddelete_mock_function.c

hcfs_clouddelete_unittest : clouddelete_mock_function.o hcfs_clouddelete.o hcfs_clouddelete_unittest.o gtest_main.a
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -lpthread $^ -o $@ -lstdc++

# atomic_tocloud_unittest
atomic_tocloud.o : $(USER_DIR)/atomic_tocloud.c $(GTEST_HEADERS)
	$(CXX) $(CPPFLAGS) $(CFLAGS) -c $(USER_DIR)/atomic_tocloud.c

atomic_tocloud_mock_function.o : $(UNITTEST_DIR)/atomic_tocloud_mock_function.c
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(UNITTEST_DIR)/atomic_tocloud_mock_function.c

atomic_tocloud_unittest.o : $(UNITTEST_DIR)/atomic_tocloud_unittest.cc \
                      $(USER_DIR)/hcfs_tocloud.h $(USER_DIR)/hcfs_tocloud.c \
		      $(GTEST_HEADERS)
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(UNITTEST_DIR)/atomic_tocloud_unittest.cc

atomic_tocloud_unittest : atomic_tocloud_mock_function.o atomic_tocloud.o \
	atomic_tocloud_unittest.o gtest_main.a
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -lpthread $^ -o $@ -lstdc++

# tocloud_tools_unittest
tocloud_tools.o : $(USER_DIR)/tocloud_tools.c $(USER_DIR)/global.h $(USER_DIR)/params.h \
                     $(USER_DIR)/fuseop.h $(USER_DIR)/tocloud_tools.h $(GTEST_HEADERS)
	$(CXX) $(CPPFLAGS) $(CFLAGS) -c $(USER_DIR)/tocloud_tools.c

tocloud_tools_mock_function.o : $(UNITTEST_DIR)/tocloud_tools_mock_function.c
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(UNITTEST_DIR)/tocloud_tools_mock_function.c

tocloud_tools_unittest.o : $(UNITTEST_DIR)/tocloud_tools_unittest.cc \
                      $(USER_DIR)/tocloud_tools.h $(USER_DIR)/tocloud_tools.c \
		      $(GTEST_HEADERS)
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(UNITTEST_DIR)/tocloud_tools_unittest.cc

#tocloud_tools_unittest : tocloud_tools_mock_function.o tocloud_tools.o tocloud_tools_unittest.o gtest_main.a
#	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -lpthread $^ -o $@ -lstdc++ -lcrypto
tocloud_tools_unittest : tocloud_tools_mock_function.o tocloud_tools.o tocloud_tools_unittest.o gtest_main.a
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -lpthread $^ -o $@ -lstdc++ -lcrypto
