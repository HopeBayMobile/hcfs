CC = gcc
CFLAGS = -g -lfuse -lcurl -pthread -D_FILE_OFFSET_BITS=64 -lssl -lcrypto -Wunused-variable -Wimplicit-function-declaration

hcfs: mount_manager.o FS_manager.o api_interface.o logger.o lookup_count.o file_present.o hfuse_system.o utils.o super_block.o fuseop.o metaops.o filetables.o hcfscurl.o hcfs_tocloud.o hcfs_fromcloud.o hcfs_cacheops.o hcfs_clouddelete.o hcfs_cachebuild.o b64encode.o meta_mem_cache.o dir_entry_btree.o xattr_ops.o enc.o
	$(CC) -g -o hcfs mount_manager.o FS_manager.o api_interface.o logger.o lookup_count.o file_present.o hfuse_system.o utils.o super_block.o fuseop.o metaops.o filetables.o hcfscurl.o hcfs_tocloud.o hcfs_fromcloud.o hcfs_cacheops.o hcfs_clouddelete.o hcfs_cachebuild.o b64encode.o meta_mem_cache.o dir_entry_btree.o xattr_ops.o enc.o -lfuse -lcurl -pthread -lssl -lcrypto

mount_manager.o: mount_manager.c mount_manager.h
	$(CC) $(CFLAGS) -c mount_manager.c

FS_manager.o: FS_manager.c FS_manager.h
	$(CC) $(CFLAGS) -c FS_manager.c

dir_entry_btree.o: dir_entry_btree.c dir_entry_btree.h
	$(CC) $(CFLAGS) -c dir_entry_btree.c

api_interface.o: api_interface.c api_interface.h
	$(CC) $(CFLAGS) -c api_interface.c

logger.o: logger.c logger.h
	$(CC) $(CFLAGS) -c logger.c

meta_mem_cache.o: meta_mem_cache.c global.h params.h meta_mem_cache.h
	$(CC) $(CFLAGS) -c meta_mem_cache.c

file_present.o: file_present.c global.h file_present.h super_block.h
	$(CC) $(CFLAGS) -c file_present.c

fuseop.o: fuseop.c fuseop.h super_block.h params.h
	$(CC) $(CFLAGS) -c fuseop.c

super_block.o: super_block.c fuseop.h super_block.h params.h
	$(CC) $(CFLAGS) -c super_block.c

utils.o: utils.c fuseop.h params.h
	$(CC) $(CFLAGS) -c utils.c

hfuse_system.o: hfuse_system.c fuseop.h super_block.h
	$(CC) $(CFLAGS) -c hfuse_system.c

metaops.o: metaops.c fuseop.h params.h
	$(CC) $(CFLAGS) -c metaops.c

filetables.o: filetables.c fuseop.h
	$(CC) $(CFLAGS) -c filetables.c

hcfscurl.o: hcfscurl.c hcfscurl.h
	$(CC) $(CFLAGS) -c hcfscurl.c

hcfs_tocloud.o: hcfs_tocloud.c hcfs_tocloud.h params.h hcfscurl.h super_block.h fuseop.h
	$(CC) $(CFLAGS) -c hcfs_tocloud.c

hcfs_fromcloud.o: hcfs_fromcloud.c hcfscurl.h params.h fuseop.h
	$(CC) $(CFLAGS) -c hcfs_fromcloud.c

hcfs_cacheops.o: hcfs_cacheops.c hcfs_cacheops.h params.h fuseop.h super_block.h
	$(CC) $(CFLAGS) -c hcfs_cacheops.c

hcfs_cachebuild.o: hcfs_cachebuild.c hcfs_cachebuild.h params.h fuseop.h super_block.h
	$(CC) $(CFLAGS) -c hcfs_cachebuild.c

hcfs_clouddelete.o: hcfs_clouddelete.c hcfs_clouddelete.h hcfs_tocloud.h params.h hcfscurl.h super_block.h fuseop.h
	$(CC) $(CFLAGS) -c hcfs_clouddelete.c

lookup_count.o : lookup_count.c lookup_count.h
	$(CC) $(CFLAGS) -c lookup_count.c

b64encode.o: b64encode.c
	$(CC) $(CFLAGS) -c b64encode.c

xattr_ops.o: xattr_ops.c xattr_ops.h
	$(CC) $(CFLAGS) -c xattr_ops.c

enc.o: enc.h enc.c
	$(CC) $(CFLAGS) -c enc.c


clean:
	rm -rf *.o hcfs
